@model RecipeManager.Models.ViewModels.IngredientVM
@using RecipeManager.Models.Entities

<div class="row">
    <div class="col-md-4">
        <form asp-action="_CreateIngredient" id="createIngredientForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input id="createIngredientName" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select id="createIngredientType" asp-for="Type" class="form-select">
                    @foreach (var type in typeof(IngredientType).GetEnumNames())
                    {
                        <option value="@type">@type</option>
                    }
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" value="Create" class="btn btn-primary createIngredientBtn" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
